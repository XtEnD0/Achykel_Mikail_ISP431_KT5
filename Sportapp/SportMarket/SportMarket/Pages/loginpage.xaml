<Page x:Class="SportMarket.Pages.loginpage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SportMarket.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="570" d:DesignWidth="1000"
      Title="страница авторизации">

    <Grid>
        <Grid Height="250" Width="250"
              VerticalAlignment="Center" HorizontalAlignment="Center">
            <Grid.Effect>
                <DropShadowEffect Opacity="0.3"/>
            </Grid.Effect>

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label Content="Login:" HorizontalAlignment="Center" FontSize="18"></Label>
                <TextBox x:Name="LoginTextBox" Width="200" Height="25" FontSize="17" Margin="0,5,0,0"></TextBox>
                <Label Content="Password:" HorizontalAlignment="Center" FontSize="18" Margin="0,5,0,0"></Label>
                <PasswordBox x:Name="PasPasBox" Width="200" Height="25" FontSize="14" Margin="0,5,0,0"></PasswordBox>
                <Button x:Name="loginbutton" Click="loginbutton_Click" Content="Confirm" FontSize="15" Width="120" Height="25" Margin="0,15,0,0"></Button>
            </StackPanel>
            
            
            
        </Grid>
        
    </Grid>
</Page>
